<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:weightSum="1"
    tools:showIn="@layout/activity_week_list" tools:context="com.example.dealerapp.WeekList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@drawable/button_border"

        android:paddingLeft="5dp"
        android:paddingRight="5dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="Player Code"
        android:textColor="#fff"
        android:id="@+id/textname"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="Chips"
        android:id="@+id/textchips"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="Wins"
        android:textColor="#fff"
        android:id="@+id/textwins"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="wrap_content"
        android:text="Comm."
        android:textColor="#fff"
        android:id="@+id/textcomm"
        android:layout_gravity="center"
        android:gravity="center"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78"
        android:id="@+id/weeklist"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/textColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/bottomLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Chips Weekly"
            android:textColor="@color/textColor"
            android:id="@+id/textView12"
            android:layout_gravity="center"
            android:gravity="center"/>


        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Winnings Weekly"
            android:textColor="@color/textColor"
            android:id="@+id/textView19"
            android:layout_gravity="center"
            android:gravity="center"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Commission Weekly"
            android:textColor="@color/textColor"
            android:id="@+id/textView16"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>


    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/textColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/bottomLayout1"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/textColor"
            android:id="@+id/txttotalbets"
            android:layout_gravity="center"
            android:gravity="center"/>


        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/textColor"
            android:id="@+id/txtwinnings"
            android:layout_gravity="center"
            android:gravity="center"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/textColor"
            android:id="@+id/txtprftlos"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/textColor"/>


    </LinearLayout>

</LinearLayout>
